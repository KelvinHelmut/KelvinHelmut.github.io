---
import { getLangFromUrl } from "../i18n/utils";
import ParticlesBackground from "../components/ParticlesBackground";
import ThemeToggle from "../components/ThemeToggle";
import { Languages, Github, Linkedin } from "lucide-react";
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
}

const { title, description } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <script is:inline>
            const theme = (() => {
                if (
                    typeof localStorage !== "undefined" &&
                    localStorage.getItem("theme")
                ) {
                    return localStorage.getItem("theme");
                }
                if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
                    return "dark";
                }
                return "light";
            })();

            if (theme === "dark") {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }
        </script>
        <title>{title} | Kelvin Helmut</title>
        <meta name="description" content={description} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />

        <!-- Google Analytics -->
        <script
            is:inline
            async
            src="https://www.googletagmanager.com/gtag/js?id=UA-172160606-1"
        ></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", "UA-172160606-1");
        </script>
    </head>
    <body>
        <ParticlesBackground client:load />
        <div
            class="relative z-10 max-w-3xl mx-auto px-6 min-h-screen flex flex-col"
        >
            <header
                class="sticky top-0 z-50 py-4 md:py-8 mb-8 -mx-6 px-6 flex justify-between items-center bg-white/70 dark:bg-zinc-950/70 backdrop-blur-md border-b border-transparent transition-colors"
            >
                <a
                    href={lang === "es" ? "/" : "/en"}
                    class="text-xl font-bold tracking-tight">KH</a
                >
                <nav class="flex gap-2 md:gap-4 items-center">
                    <slot name="nav" />
                    <div
                        class="h-4 w-[1px] bg-zinc-200 dark:bg-zinc-800 mx-1 hidden md:block"
                    >
                    </div>
                    <ThemeToggle client:load />
                    <a
                        href={lang === "es" ? "/en" : "/"}
                        class="flex items-center gap-1.5 p-2 rounded-full hover:bg-zinc-100 dark:hover:bg-zinc-800 text-sm font-bold text-zinc-500 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                        title={lang === "es"
                            ? "Switch to English"
                            : "Cambiar a Español"}
                    >
                        <Languages size={18} />
                        <span class="text-[10px]"
                            >{lang === "es" ? "EN" : "ES"}</span
                        >
                    </a>
                </nav>
            </header>

            <main class="flex-grow">
                <slot />
            </main>

            <footer
                class="mt-20 py-12 border-t border-zinc-100 dark:border-zinc-900"
            >
                <div
                    class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8 mb-8"
                >
                    <div class="flex flex-col gap-1">
                        <span
                            class="text-sm font-bold text-zinc-900 dark:text-zinc-100 italic text-balance leading-tight"
                            >Kelvin Helmut</span
                        >
                        <span
                            class="text-[10px] text-zinc-500 dark:text-zinc-500 uppercase tracking-widest font-medium leading-none"
                            >Software Engineer & Architect</span
                        >
                    </div>

                    <div class="flex flex-col md:items-end gap-1">
                        <div class="flex gap-6 leading-none">
                            <a
                                href="https://github.com/KelvinHelmut"
                                target="_blank"
                                class="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                            >
                                <Github size={14} />
                                <span>GitHub</span>
                            </a>
                            <a
                                href="https://linkedin.com/in/kelvinhelmut"
                                target="_blank"
                                class="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                            >
                                <Linkedin size={14} />
                                <span>LinkedIn</span>
                            </a>
                        </div>
                        <span
                            class="text-[10px] text-zinc-400 dark:text-zinc-600 leading-none"
                        >
                            &copy; {new Date().getFullYear()} — Arequipa, Perú
                        </span>
                    </div>
                </div>

                <div class="flex justify-center">
                    <div
                        class="flex items-center gap-3 py-2 px-4 rounded-full bg-zinc-100/50 dark:bg-zinc-900/50 border border-zinc-200/50 dark:border-zinc-800/50"
                    >
                        <span class="relative flex h-2 w-2">
                            <span
                                class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"
                            ></span>
                            <span
                                class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"
                            ></span>
                        </span>
                        <span
                            class="text-[10px] uppercase tracking-[0.2em] font-bold text-zinc-500 dark:text-zinc-400"
                        >
                            {
                                lang === "es"
                                    ? "Disponible para nuevos proyectos"
                                    : "Available for new projects"
                            }
                        </span>
                    </div>
                </div>
            </footer>
        </div>
    </body>
</html>

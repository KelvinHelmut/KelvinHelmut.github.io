---
import { ExternalLink, Github, Zap } from "lucide-react";
import { Image } from "astro:assets";
import CertificateModal from "./CertificateModal";

interface Props {
    title: string;
    description: string;
    tags: string[];
    link?: string;
    github?: string;
    image?: any;
    isProduction?: boolean;
}

const { title, description, tags, link, github, image, isProduction } =
    Astro.props;
---

<div
    class="group relative bg-zinc-50 dark:bg-zinc-900/50 border border-zinc-100 dark:border-zinc-800 p-0 rounded-2xl transition-all duration-300 hover:border-zinc-200 dark:hover:border-zinc-700 overflow-hidden flex flex-col"
>
    {
        image && (
            <div class="relative w-full h-full aspect-video overflow-hidden border-b border-zinc-100 dark:border-zinc-800">
                <CertificateModal
                    client:load
                    src={image.src}
                    alt={title}
                    ariaLabel={`Ampliar imagen de ${title}`}
                >
                    <Image
                        src={image}
                        alt={title}
                        class="w-full h-full object-cover grayscale brightness-90 group-hover:grayscale-0 group-hover:brightness-100 transition-all duration-700 ease-in-out group-hover:scale-105"
                    />
                </CertificateModal>
            </div>
        )
    }
    <div class="p-6 flex flex-col flex-grow">
        <div class="flex justify-between items-start mb-4">
            <div class="flex flex-col gap-1">
                <div class="flex items-center gap-2">
                    <h3
                        class="text-lg font-semibold text-zinc-900 dark:text-zinc-100"
                    >
                        {title}
                    </h3>
                    {
                        isProduction && (
                            <span class="inline-flex items-center gap-1 px-1.5 py-0.5 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-600 dark:text-emerald-400 rounded text-[9px] font-bold uppercase tracking-wider">
                                <Zap size={10} fill="currentColor" />
                                Live
                            </span>
                        )
                    }
                </div>
            </div>
            <div class="flex gap-3">
                {
                    github && (
                        <a
                            href={github}
                            target="_blank"
                            class="text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                            aria-label={`Ver código fuente de ${title} en GitHub`}
                            title="Ver código fuente"
                        >
                            <Github size={18} />
                        </a>
                    )
                }
                {
                    link && (
                        <a
                            href={link}
                            target="_blank"
                            class="text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                            aria-label={`Visitar sitio web de ${title}`}
                            title="Visitar sitio web"
                        >
                            <ExternalLink size={18} />
                        </a>
                    )
                }
            </div>
        </div>
        <p
            class="text-zinc-600 dark:text-zinc-400 text-sm mb-6 leading-relaxed flex-grow"
        >
            {description}
        </p>
        <div class="flex flex-wrap gap-2 mt-auto">
            {
                tags.map((tag) => (
                    <span class="px-2 py-1 bg-white dark:bg-zinc-800 border border-zinc-100 dark:border-zinc-700 rounded-md text-[10px] uppercase tracking-wider font-bold text-zinc-500 dark:text-zinc-400">
                        {tag}
                    </span>
                ))
            }
        </div>
    </div>
</div>

---
interface Props {
    company: string;
    role: string;
    period: string;
    location?: string;
    description?: string;
    highlights?: string[];
    technologies?: string[];
}

const {
    company,
    role,
    period,
    location,
    description,
    highlights,
    technologies,
} = Astro.props;
---

<div
    class="relative pl-8 pb-12 border-l border-zinc-100 dark:border-zinc-800 last:border-0 last:pb-0"
>
    <div
        class="absolute left-[-5px] top-1 w-[9px] h-[9px] rounded-full bg-zinc-200 dark:bg-zinc-700 border-2 border-white dark:border-[#0a0a0a]"
    >
    </div>
    <div
        class="flex flex-col md:flex-row md:justify-between md:items-baseline mb-1"
    >
        <h3 class="text-base font-bold text-zinc-900 dark:text-zinc-100">
            {role}
        </h3>
        <span
            class="text-[10px] font-bold text-zinc-400 dark:text-zinc-500 uppercase tracking-widest"
            >{period}</span
        >
    </div>
    <div class="flex justify-between items-center mb-4">
        <p
            class="text-sm font-semibold text-zinc-500 dark:text-zinc-400 italic"
        >
            {company}
        </p>
        {
            location && (
                <span class="text-[10px] text-zinc-400 dark:text-zinc-500">
                    {location}
                </span>
            )
        }
    </div>

    {
        description && (
            <p class="text-sm text-zinc-600 dark:text-zinc-400 leading-relaxed mb-4">
                {description}
            </p>
        )
    }

    {
        highlights && highlights.length > 0 && (
            <ul class="space-y-2 mb-4">
                {highlights.map((item) => (
                    <li class="text-sm text-zinc-600 dark:text-zinc-400 flex gap-2">
                        <span class="text-zinc-300 dark:text-zinc-700 mt-1">
                            â€¢
                        </span>
                        <span>{item}</span>
                    </li>
                ))}
            </ul>
        )
    }

    {
        technologies && (
            <div class="flex flex-wrap gap-2">
                {technologies.map((tech) => (
                    <span class="text-[10px] px-2 py-0.5 bg-zinc-50 dark:bg-zinc-900 border border-zinc-100 dark:border-zinc-800 rounded text-zinc-500 dark:text-zinc-400 font-medium">
                        {tech}
                    </span>
                ))}
            </div>
        )
    }
</div>

---
import { ExternalLink, Award, CheckCircle2 } from "lucide-react";

interface Props {
    title: string;
    subtitle: string;
    link: string;
    badge: string;
}

const { title, subtitle, link, badge } = Astro.props;
---

<a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative block p-5 mt-6 rounded-2xl border border-zinc-100 dark:border-zinc-800 bg-zinc-50/50 dark:bg-zinc-900/40 hover:bg-white dark:hover:bg-zinc-800/50 transition-all duration-300 shadow-sm hover:shadow-md overflow-hidden"
>
    {/* Subtle gradient glow */}
    <div
        class="absolute -right-10 -top-10 w-32 h-32 bg-emerald-500/10 dark:bg-emerald-500/5 blur-3xl group-hover:bg-emerald-500/15 transition-colors"
    >
    </div>

    <div class="flex items-start gap-6 relative mb-3">
        {/* Main Content: Title and Number */}
        <div class="flex-grow pt-1">
            <div class="flex flex-col">
                <span
                    class="text-xl font-black text-zinc-900 dark:text-zinc-100 tracking-tighter leading-none mb-1"
                >
                    {title.split(" ")[0]}
                </span>
                <h4
                    class="text-sm font-bold text-zinc-900 dark:text-zinc-100 tracking-tight leading-tight"
                >
                    {title.split(" ").slice(1).join(" ")}
                </h4>
            </div>
        </div>

        {/* Achievement Symbols: Medal and Badge */}
        <div class="flex flex-col items-center gap-1.5 flex-shrink-0">
            <div
                class="w-10 h-10 flex items-center justify-center rounded-2xl bg-gradient-to-br from-emerald-50 to-white dark:from-emerald-950/20 dark:to-zinc-900 border border-emerald-100/50 dark:border-emerald-500/20 group-hover:scale-110 transition-transform duration-500 shadow-sm border-zinc-100 dark:border-zinc-800"
            >
                <Award
                    size={22}
                    className="text-emerald-500 dark:text-emerald-400"
                />
            </div>
            <div
                class="flex items-center gap-1.5 bg-emerald-500/10 dark:bg-emerald-500/20 px-2 py-0.5 rounded-full whitespace-nowrap"
            >
                <CheckCircle2
                    size={10}
                    className="text-emerald-600 dark:text-emerald-400"
                />
                <span
                    class="text-[8px] font-bold text-emerald-700 dark:text-emerald-400 uppercase tracking-widest"
                    >{badge}</span
                >
            </div>
        </div>

        <div class="flex-shrink-0 pt-1">
            <ExternalLink
                size={18}
                className="text-zinc-400 opacity-0 group-hover:opacity-100 transition-opacity"
            />
        </div>
    </div>

    <p
        class="text-[11px] text-zinc-500 dark:text-zinc-400 font-medium leading-relaxed opacity-85"
    >
        {subtitle}
    </p>
</a>

---
import { ExternalLink, Award, CheckCircle2 } from "lucide-react";

interface Props {
    title: string;
    subtitle: string;
    link: string;
    badge: string;
}

const { title, subtitle, link, badge } = Astro.props;
---

<a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="group relative block p-5 mt-6 rounded-2xl border border-zinc-100 dark:border-zinc-800 bg-transparent hover:bg-zinc-50/50 dark:hover:bg-zinc-900/30 transition-all duration-300 overflow-hidden"
>
    {/* Subtle gradient glow - only visible on hover */}
    <div
        class="absolute -right-10 -top-10 w-24 h-24 bg-emerald-500/0 group-hover:bg-emerald-500/5 blur-2xl transition-colors duration-700"
    >
    </div>

    <div class="flex items-start gap-6 relative mb-3">
        {/* Main Content: Title and Number */}
        <div class="flex-grow pt-1">
            <div class="flex flex-col">
                <span
                    class="text-xl font-black text-zinc-900 dark:text-zinc-100 tracking-tighter leading-none mb-1 opacity-90"
                >
                    {title.split(" ")[0]}
                </span>
                <h4
                    class="text-sm font-bold text-zinc-600 dark:text-zinc-400 tracking-tight leading-tight group-hover:text-zinc-900 dark:group-hover:text-zinc-100 transition-colors"
                >
                    {title.split(" ").slice(1).join(" ")}
                </h4>
            </div>
        </div>

        {/* Achievement Symbols: Medal and Badge */}
        <div class="flex flex-col items-center gap-1.5 flex-shrink-0">
            <div
                class="w-10 h-10 flex items-center justify-center rounded-2xl bg-zinc-50 dark:bg-zinc-900 border border-zinc-100 dark:border-zinc-800 group-hover:border-emerald-500/30 group-hover:bg-emerald-500/[0.03] transition-all duration-500"
            >
                <Award
                    size={22}
                    className="text-zinc-400 group-hover:text-emerald-500 transition-colors duration-500"
                />
            </div>
            <div
                class="flex items-center gap-1.5 bg-zinc-100/50 dark:bg-zinc-800/50 group-hover:bg-emerald-500/10 px-2 py-0.5 rounded-full whitespace-nowrap transition-colors duration-500"
            >
                <CheckCircle2
                    size={10}
                    className="text-zinc-400 group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors duration-500"
                />
                <span
                    class="text-[8px] font-bold text-zinc-500 dark:text-zinc-500 group-hover:text-emerald-700 dark:group-hover:text-emerald-400 uppercase tracking-widest transition-colors duration-500"
                    >{badge}</span
                >
            </div>
        </div>

        <div class="flex-shrink-0 pt-1">
            <ExternalLink
                size={16}
                className="text-zinc-400 opacity-0 group-hover:opacity-100 transition-all duration-300 translate-x-1 group-hover:translate-x-0"
            />
        </div>
    </div>

    <p
        class="text-[11px] text-zinc-500 dark:text-zinc-500 font-medium leading-relaxed opacity-70 group-hover:opacity-100 transition-all"
    >
        {subtitle}
    </p>
</a>

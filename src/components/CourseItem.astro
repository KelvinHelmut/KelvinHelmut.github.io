---
interface Props {
    title: string;
    platform: string;
    date: string;
    link?: string;
}

const { title, platform, date, link } = Astro.props;
---

<div
    class="group flex items-center justify-between p-3 -mx-3 rounded-xl hover:bg-zinc-50 dark:hover:bg-zinc-900/50 transition-colors"
>
    <div>
        <h4
            class="text-sm font-semibold text-zinc-900 dark:text-zinc-100 group-hover:text-primary transition-colors"
        >
            {
                link ? (
                    <a href={link} target="_blank" class="hover:underline">
                        {title}
                    </a>
                ) : (
                    title
                )
            }
        </h4>
        <p class="text-xs text-zinc-500 dark:text-zinc-400">{platform}</p>
    </div>
    <span
        class="text-[10px] font-bold text-zinc-400 dark:text-zinc-500 uppercase tracking-widest"
        >{date}</span
    >
</div>
